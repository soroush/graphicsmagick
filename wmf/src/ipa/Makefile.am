CFLAGS = @CFLAGS@ @WMF_CFLAGS@

LDFLAGS = @LDFLAGS@

DEFS = @DEFS@ @WMF_DEFS@ \
	-DPACKAGE=\"@PACKAGE@\" \
	-DVERSION=\"@VERSION@\" \
	-DWMF_SYS_FONTMAP=\"@WMF_SYS_FONTMAP@\" \
	-DWMF_XTRA_FONTMAP=\"@WMF_XTRA_FONTMAP@\" \
